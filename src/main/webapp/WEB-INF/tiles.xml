<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

<!-- trang index.jsp co template Layout, 4 phan title, header, body, footer -->

  <definition name="index" template="/WEB-INF/views/layout/layout.jsp">
    <put-attribute name="title" value="Home Page" />
    <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/jsp/index.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp" />
  </definition>
  
  <!-- cac trang con lai ke thua tu trang index.jsp, ghi de title va body -->
  <definition name="login" extends="index">
    <put-attribute name="title" value="Login" />
    <put-attribute name="body" value="/WEB-INF/views/jsp/login.jsp" />
  </definition>
  <definition name="user-list" extends="index">
    <put-attribute name="title" value="List Users" />
    <put-attribute name="body" value="/WEB-INF/views/jsp/user-list.jsp" />
  </definition>
  <definition name="user-save" extends="index">
    <put-attribute name="title" value="Add User" />
    <put-attribute name="body" value="/WEB-INF/views/jsp/user-save.jsp" />
  </definition>
  <definition name="user-update" extends="index">
    <put-attribute name="title" value="Update User" />
    <put-attribute name="body" value="/WEB-INF/views/jsp/user-update.jsp" />
  </definition>
  <definition name="user-view" extends="index">
    <put-attribute name="title" value="View User" />
    <put-attribute name="body" value="/WEB-INF/views/jsp/user-view.jsp" />
  </definition>
</tiles-definitions>
